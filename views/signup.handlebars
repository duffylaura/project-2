<div class = "columms custom-columns">
  <div class = "column is-half is-offset-one-quarter"> 
     <div class = "column is-half is-offset-one-quarter"> 
      <img class="image logo" src="./assets/logo-clear-background.png" alt="purple wAIve logo"/> </div>
    </div>
  </div>
</div>
<div class = "login-space">
  <h1 class = "title is-3"> Sign Up</h1> 
</div>
<div class="card">
  <form class="card-content" id="signup-form">
    <div class="field">
      <label class="label">Username</label>
        <div class="control">
          <input id="signupUsername" class="input custom-input" type="username" placeholder="e.g. coldBlueChilliPepper"/>
        </div>
    </div>
    <br>
    <div class="field">
      <label class="label">Email</label>
        <div class="control">
          <input id="signupEmail" class="input custom-input" type="email" placeholder="e.g. RockOn@gmail.com"/>
        </div>
    </div>
    <br> 
    <div class="field">
      <label class="label">Password</label>
        <div class="control">
          <input id="signupPW" class="input custom-input" type="password" placeholder="Make it a good one! At least 8 characters!"/>
        </div>
    </div>
    <br> 
    <div class="field is-grouped">
      <div class="control">
        <button id="signupBtn" class="button custom-button" type="submit"> <strong>Join the Community!</strong></button>
      </div>
      <div class="control">
        <a href="/"><button class="button custom-button" type="button">abandon ship!</button></a>
      </div>
    </div>
  </form>
</div>

{{! modal that pops up if username or email are already taken }}
<div id ="dupCheck"class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head custom-modal-header"></header>
    <section class="modal-card-body custom-modal-body">
      <p id="user-check">username/email already taken</p>
      <div class="level-right">
        <button id="dupOkBtn" class="button ok-btn custom-btn">OK</button>
      </div>
    </section>
  </div>
</div>
{{! modal that pops up if password or email are wrong }}
<div id="emailModal"class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head custom-modal-header"></header>
    <section class="modal-card-body custom-modal-body">
      <p id="user-valid">Please enter a valid email</p>
      <div class="level-right">
        <button id="emailOKBtn"class="button ok-btn custom-btn">OK</button>
      </div>
    </section>
  </div>
</div>

<div id="PwModal"class="modal">
  <div class="modal-background"></div>
  <div class="modal-card">
    <header class="modal-card-head custom-modal-header"></header>
    <section class="modal-card-body custom-modal-body">
      <p id="user-valid">Please enter a password with  at least one lowercase letter , one uppercase letter , one digit , one special character , and is at least eight characters long. </p>
      <div class="level-right">
        <button id ="PWmodalOK"class="button ok-btn custom-btn">OK</button>
      </div>
    </section>
  </div>
</div>
<script src="/js/signup.js"></script>