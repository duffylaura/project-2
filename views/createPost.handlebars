<div class="modal" id="redirect">
    <div class="modal-background"></div>
    <script src="https://cdn.lordicon.com/qjzruarw.js"></script>
    <lord-icon class="is-centered" src="https://cdn.lordicon.com/ommvariz.json" trigger="loop"
        colors="primary:#f4f9ad,secondary:#ebc6fe,tertiary:#646e78,quaternary:#3a3347,quinary:#ebe6ef" stroke="100"
        style="width:250px;height:250px">
    </lord-icon>
    <br />
    <div class="keyword">
        <h2 id="redirMsg"></h2>
    </div>
    <br />
    <button class="button ok-btn custom-button" id="redirBtn">click here to redirect</button>
    <div class="modal-content">
    </div>
</div>

{{!-- modal for loader --}}
<div class="modal" id="modalLoader">
    <div class="modal-background"></div>
    <script src="https://cdn.lordicon.com/qjzruarw.js"></script>
    <lord-icon src="https://cdn.lordicon.com/qshigsah.json" trigger="loop"
