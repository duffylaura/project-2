{{#if loggedIn}}
<section class="hero">
    <img class="image" src="./assets/banner-text-large.png" alt="Logo Banner"/>
</section>

<div class = "column px-6 py-6">
{{#each post as |Post|}}
    <div class="card custom-card">
        <p class="title is-5"> {{Post.title}}</p>
        <a href="/api/post/{{Post.id}}"> <img class="image" src="{{Post.img_url}}" alt="{{Post.title}}"></a>
        <p class="is-italic"> created by {{Post.user.username}} on {{format_date Post.created_at}} </p>
        <p> {{Post.body}}</p>
    </div> 
    <br>
{{/each}}
</div>


